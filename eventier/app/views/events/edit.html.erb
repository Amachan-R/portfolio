<h2>投稿編集画面</h2>

<%= form_with model:@event, local:true do |f| %>
  <h4>イベント画像</h4>
  <%= f.attachment_field :image %>
  <h4>タイトル</h4>
  <%= f.text_field :name %>
  <h4>内容</h4>
  <%= f.text_area :caption %>
  <h4>年齢</h4>
  <%= f.select :age, Event.ages.keys, {} %>
  <h4>都道府県</h4>
  <%= f.select :prefecture, Event.prefectures.keys, {} %>
  <h4>参加した日</h4>
  <div class="input-group" data-target-input="nearest">
    <%= f.text_field :created_at, id: "created_at", class: "form-control datepicker", data: { target: '#created_at'} %>
    <div class="input-group-append" data-target="#created_at" data-toggle="datetimepicker">
      <div class="input-group-text"><i class="fa fa-calendar"></i></div>
    </div>
  </div>

  <%= f.submit '保存' %>
<% end %>