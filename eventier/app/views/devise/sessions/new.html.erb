<div class="container">
  <div class="shadow-lg mt-5">
    <div class="row">
      <div class="col-11 d-flex align-items-center justify-content-center my-5 ml-5 border-bottom border-dark">
        <h2>Log in</h2>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="field col-8 offset-4 my-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", :size => "40*30" %>
        </div>
      </div><br />
      <div class="row">
        <div class="field col-8 offset-4 my-3">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", :size => "40*30" %>
        </div>
      </div><br />
      <div class="actions row">
        <div class="col-8 offset-5 my-3">
          <%= f.submit "ログイン", class: "border rounded-pill bg-success text-white px-5" %>
        </div>
      </div><br />
    <% end %>
    <div class="row">
      <div class="col-8 offset-5 mb-5">
        <%= link_to '新規登録はこちら', new_user_registration_path %>
      </div>
    </div>
  </div>
</div>