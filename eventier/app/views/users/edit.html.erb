<div class="container">
  <div class="shadow-lg mt-5">
    <div class="row">
      <div class="col-11 d-flex align-items-center justify-content-center my-5 ml-5 border-bottom border-dark">
        <h2>プロフィール編集</h2>
      </div>
    </div>

    <% if @user.errors.any? %>
      <div id="error_explanation", class="ml-5">
        <h3><%= @user.errors.count %>件のエラーが発生しました。</h3>
        <% @user.errors.full_messages.each do |message| %>
          <ul><li><%= message %></li></ul>
        <% end %>
      </div>
    <% end %>

    <%= form_with model:@user, local:true do |f| %>
      <div class="row">
      　<div class="field col-2 offset-3 my-3">
          <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, fallback: "human.png", size:'80x80' %>
        </div>
        <div class="field col-4 my-3">
          <h4>プロフィール画像</h4>
          <%= f.attachment_field :profile_image %>
        </div>
      </div>
      <div class="row">
        <div class="field col-8 offset-4 my-3">
          <h4>ニックネーム</h4>
          <%= f.text_field :name, placeholder: "ニックネーム", :size => "40*30" %>
        </div>
      </div>
      <div class="row">
        <div class="field col-8 offset-4 my-3">
          <h4>自己紹介</h4>
          <%= f.text_area :introduction, placeholder: "自己紹介", :size => "50*30" %>
        </div>
      </div>
      <div class="row">
        <div class="col-8 offset-5 my-5">
          <%= f.submit '更新', class: "border rounded-pill bg-success text-white px-5" %>
        </div>
      </div>
    <% end %>
  </div>
</div>